<layout name="eventSearch" title="事件定义" use="lw-search-layout" pageLayout="eventPage" query="event" keyFields="name">

  <toolbar use="lw-search-form" keyPlaceholder="">
    <button title="新增" event="new" use="lw-button" permission="query/event/new" />
  </toolbar>

  <list use="lw-list" index="true" height="450" editColumn="true">
    <field name="name" title="名称" titleCode="event.name" use="lw-list-label" width="200" />
    <field name="description" title="说明" titleCode="event.description" use="lw-list-label" />
    <field name="is_reserved" title="系统保留" titleCode="event.reversed" use="lw-list-checkbox" />
    <field name="insert_user" title="Insert User" titleCode="model.insert_user" use="lw-list-label" />
    <field name="insert_date" title="Insert Time" titleCode="model.insert_date" use="lw-list-label" width="150" type="datetime" />
    <field name="update_user" title="Update User" titleCode="model.update_user" use="lw-list-label" />
    <field name="update_date" title="Update Time" titleCode="model.update_date" use="lw-list-label" width="150" type="datetime" />
  </list>

  <paging use="lw-paging" />
</layout>
